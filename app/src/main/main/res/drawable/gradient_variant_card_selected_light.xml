<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:startColor="#4D8DBC"
                android:endColor="#5352BD"
                android:type="linear" />
            <corners android:radius="10dp"/>
<!--            <size android:width="24dp"-->
<!--                android:height="24dp"/>-->
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/lightCardColor" />
            <corners android:radius="10dp"/>
        </shape>
    </item>

</layer-list>