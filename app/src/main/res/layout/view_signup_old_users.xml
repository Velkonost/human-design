<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/oldUsersBgIcon"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_start_header_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oldUsersTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/oldUsersBgIcon"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/oldUsersSubtitle"
        app:layout_constraintTop_toBottomOf="@id/oldUsersTitle"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:gravity="center"
        android:alpha="0.7"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/oldUsersFooter"
        app:layout_constraintTop_toBottomOf="@id/oldUsersSubtitle"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:alpha="0.5"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/oldUsersIndicatorsContainer"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/oldUsersIndicator1"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/bg_inactive_indicator_dark" />

            <View
                android:id="@+id/oldUsersIndicator2"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_inactive_indicator_dark" />

            <View
                android:id="@+id/oldUsersIndicator3"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_inactive_indicator_dark" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>