<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.get.hd.ui.start.StartViewModel" />

        <variable
            name="handler"
            type="ru.get.hd.ui.adduser.AddUserFragment.Handler" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/startContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkColor"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.main.MainActivity">

        <FrameLayout
            android:id="@+id/snackbarContainer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/backBtn"
            android:onClick="@{handler::onBackClicked}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_width="27dp"
            android:layout_height="27dp">

            <ImageView
                android:id="@+id/icArrow"
                android:src="@drawable/ic_arrow"
                android:rotation="180"
                android:layout_gravity="center"
                android:layout_width="14dp"
                android:layout_height="14dp"/>

        </FrameLayout>

        <ImageView
            android:alpha="1"
            android:id="@+id/bottomGradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_btn_bottom_gradient"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/icSplashBigCircle"
            android:layout_width="977dp"
            android:layout_height="977dp"
            android:layout_marginTop="-120dp"
            android:adjustViewBounds="true"
            android:alpha="0.2"
            android:rotation="90"
            android:src="@drawable/ic_circle_big_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/startBtn" />

        <ImageView
            android:id="@+id/icSplashMidCircle"
            android:layout_width="977dp"
            android:layout_height="977dp"
            android:layout_marginTop="-30dp"
            android:adjustViewBounds="true"
            android:alpha="0.2"
            android:src="@drawable/ic_circle_mid_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/startBtn" />

        <ImageView
            android:id="@+id/icSplashBigCirclePlaceOfBirth"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            android:alpha="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_circle_big_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="461dp"
            android:layout_height="461dp"/>

        <ImageView
            android:id="@+id/icSplashMidCirclePlaceOfBirth"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            android:alpha="0.2"
            android:src="@drawable/ic_circle_mid_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="380dp"
            android:layout_height="380dp"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/indicatorsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/indicator1"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/bg_inactive_indicator_dark" />

            <View
                android:id="@+id/indicator2"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_inactive_indicator_dark" />

            <View
                android:id="@+id/indicator3"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_inactive_indicator_dark" />

            <View
                android:id="@+id/indicator4"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_inactive_indicator_dark" />

            <View
                android:id="@+id/indicator5"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_inactive_indicator_dark" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/startBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{handler::onBtnClicked}"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@id/indicatorsContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_btn" />

            <TextView
                android:id="@+id/startBtnText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:letterSpacing="0.12"
                android:text="@string/next"
                android:textAllCaps="true"
                android:textColor="@color/lightColor"
                android:textSize="16sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/raveContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/backBtn"
            >

            <TextView
                android:id="@+id/raveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/raveDesc"
                android:alpha="0.7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nameContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:alpha="0"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/startBtn"
            app:layout_constraintTop_toBottomOf="@id/backBtn">

            <TextView
                android:id="@+id/nameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:fontFamily="@font/roboto"
                android:lines="2"
                android:textStyle="bold"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/nameDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameTitle" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/nameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="46dp"
                android:backgroundTint="@color/darkHintColor"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:includeFontPadding="true"
                android:inputType="textVisiblePassword|textNoSuggestions"
                android:letterSpacing="0.12"
                android:paddingBottom="24dp"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ru.get.hd.ui.view.daytimepicker.SingleDateAndTimePicker
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="62dp"
                android:alpha="0"
                app:picker_textSize="20sp"
                app:picker_curved="true"
                app:picker_cyclic="true"
                app:picker_displayDays="false"
                app:picker_displayDaysOfMonth="true"
                app:picker_displayHours="false"
                app:picker_displayMinutes="false"
                app:picker_displayMonth="true"
                app:picker_displayYears="true"
                app:picker_displayMonthNumbers="false"
                app:picker_monthFormat="MMMM"
                android:calendarTextColor="@color/lightColor"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                app:pickerMode="dayFirst"
                android:hapticFeedbackEnabled="true"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:offset="3"
                />

            <ru.get.hd.ui.view.daytimepicker.SingleDateAndTimePicker
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:picker_textSize="20sp"
                app:picker_curved="true"
                app:picker_cyclic="true"
                app:picker_displayDays="false"
                app:picker_displayMonthNumbers="false"
                app:picker_displayYears="false"
                app:picker_displayMonth="false"
                app:picker_displayMinutes="true"
                app:picker_displayHours="true"
                app:picker_displayDaysOfMonth="false"
                android:alpha="0"
                android:timePickerMode="spinner"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/skipTime"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/skipTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="25dp"
                android:alpha="0"
                android:textSize="16sp"
                android:letterSpacing="0.12"
                android:visibility="gone"
                android:fontFamily="@font/roboto_bold"
                android:onClick="@{handler::onBtnClicked}"
                android:background="@drawable/bg_skip_time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/placeET"
                android:onClick="@{handler::openPlacesView}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:alpha="0"
                android:textAllCaps="true"
                android:backgroundTint="@color/darkHintColor"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:focusable="false"
                android:clickable="true"
                android:includeFontPadding="true"
                android:inputType="textCapWords"
                android:letterSpacing="0.2"
                android:paddingBottom="24dp"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameDesc" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bodygraphContainer"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:alpha="0"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/startBtn">

            <TextView
                android:id="@+id/bodygraphReadyTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="66dp"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ru.get.hd.ui.view.bodygraph.BodygraphView
                android:id="@+id/bodygraphView"
                android:visibility="invisible"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:layout_constraintTop_toBottomOf="@id/bodygraphReadyTitle"
                app:layout_constraintBottom_toTopOf="@id/bodygraphReadyText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="720:852"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/bodygraphReadyText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/bodygraphView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:visibility="gone"
            android:id="@+id/placesView"
            layout="@layout/view_place_select"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>