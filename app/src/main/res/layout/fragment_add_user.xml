<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.get.hd.ui.start.StartViewModel" />

        <variable
            name="handler"
            type="ru.get.hd.ui.adduser.AddUserFragment.Handler" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/startContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkColor"
            android:fitsSystemWindows="true"
            tools:context=".ui.activity.main.MainActivity">

            <FrameLayout
                android:id="@+id/snackbarContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/backBtn"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:onClick="@{handler::onBackClicked}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icArrow"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow" />

            </FrameLayout>

            <ImageView
                android:id="@+id/bottomGradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:alpha="1"
                android:src="@drawable/ic_btn_bottom_gradient"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/icSplashBigCircle"
                android:layout_width="977dp"
                android:layout_height="977dp"
                android:layout_marginTop="-120dp"
                android:adjustViewBounds="true"
                android:alpha="0.2"
                android:rotation="90"
                android:src="@drawable/ic_circle_big_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/startBtn" />

            <ImageView
                android:id="@+id/icSplashMidCircle"
                android:layout_width="977dp"
                android:layout_height="977dp"
                android:layout_marginTop="-30dp"
                android:adjustViewBounds="true"
                android:alpha="0.2"
                android:src="@drawable/ic_circle_mid_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/startBtn" />

            <ImageView
                android:id="@+id/icSplashBigCirclePlaceOfBirth"
                android:layout_width="461dp"
                android:layout_height="461dp"
                android:adjustViewBounds="true"
                android:alpha="0.2"
                android:src="@drawable/ic_circle_big_dark"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icSplashMidCirclePlaceOfBirth"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:adjustViewBounds="true"
                android:alpha="0.2"
                android:src="@drawable/ic_circle_mid_dark"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/indicatorsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <View
                    android:id="@+id/indicator1"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/bg_inactive_indicator_dark" />

                <View
                    android:id="@+id/indicator2"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_inactive_indicator_dark" />

                <View
                    android:id="@+id/indicator3"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_inactive_indicator_dark" />

                <View
                    android:id="@+id/indicator4"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_inactive_indicator_dark" />

                <View
                    android:id="@+id/indicator5"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_inactive_indicator_dark" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/startBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="@{handler::onBtnClicked}"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toTopOf="@id/indicatorsContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn" />

                <TextView
                    android:id="@+id/startBtnText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:letterSpacing="0.12"
                    android:text="@string/next"
                    android:textAllCaps="true"
                    android:textColor="@color/lightColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/raveContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/backBtn">

                <TextView
                    android:id="@+id/raveTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/raveDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:alpha="0.7"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nameContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="12dp"
                android:alpha="0"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/startBtn"
                app:layout_constraintTop_toBottomOf="@id/backBtn">

                <TextView
                    android:id="@+id/nameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center|bottom"
                    android:lines="2"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/nameDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nameTitle" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/nameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="46dp"
                    android:backgroundTint="@color/darkHintColor"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:inputType="textVisiblePassword|textNoSuggestions"
                    android:letterSpacing="0.12"
                    android:paddingBottom="24dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ru.get.hd.ui.view.daytimepicker.SingleDateAndTimePicker
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="62dp"
                    android:alpha="0"
                    android:calendarTextColor="@color/lightColor"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:hapticFeedbackEnabled="true"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:offset="3"
                    app:pickerMode="dayFirst"
                    app:picker_curved="true"
                    app:picker_cyclic="true"
                    app:picker_displayDays="false"
                    app:picker_displayDaysOfMonth="true"
                    app:picker_displayHours="false"
                    app:picker_displayMinutes="false"
                    app:picker_displayMonth="true"
                    app:picker_displayMonthNumbers="false"
                    app:picker_displayYears="true"
                    app:picker_monthFormat="MMMM"
                    app:picker_textSize="20sp" />

                <ru.get.hd.ui.view.daytimepicker.SingleDateAndTimePicker
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="38dp"
                    android:alpha="0"
                    android:timePickerMode="spinner"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/skipTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:picker_curved="true"
                    app:picker_cyclic="true"
                    app:picker_displayDays="false"
                    app:picker_displayDaysOfMonth="false"
                    app:picker_displayHours="true"
                    app:picker_displayMinutes="true"
                    app:picker_displayMonth="false"
                    app:picker_displayMonthNumbers="false"
                    app:picker_displayYears="false"
                    app:picker_textSize="20sp" />

                <TextView
                    android:id="@+id/skipTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="25dp"
                    android:alpha="0"
                    android:background="@drawable/bg_skip_time"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:letterSpacing="0.12"
                    android:onClick="@{handler::onBtnClicked}"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/placeET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:alpha="0"
                    android:backgroundTint="@color/darkHintColor"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:inputType="textCapWords"
                    android:letterSpacing="0.2"
                    android:onClick="@{handler::openPlacesView}"
                    android:paddingBottom="24dp"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nameDesc" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bodygraphContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:alpha="0"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/startBtn"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/bodygraphReadyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="66dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ru.get.hd.ui.view.bodygraph.BodygraphView
                    android:id="@+id/bodygraphView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@id/bodygraphReadyText"
                    app:layout_constraintDimensionRatio="720:852"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bodygraphReadyTitle" />

                <TextView
                    android:id="@+id/bodygraphReadyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bodygraphView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:id="@+id/placesView"
                layout="@layout/view_place_select"
                android:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>