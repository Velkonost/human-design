<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:fadingEdge="vertical"
        android:fadeScrollbars="true"
        android:fadingEdgeLength="40dp"
        android:requiresFadingEdge="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="150dp">

            <TextView
                android:id="@+id/forecastNextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:alpha="0.5"
                android:gravity="start"
                android:letterSpacing="0.04"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sunBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/forecastNextTitle">

                <View
                    android:id="@+id/point1"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_forecast_point"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/point2"
                    app:layout_constraintStart_toEndOf="@id/point1"
                    app:layout_constraintEnd_toStartOf="@id/point3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_forecast_point"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/point3"
                    app:layout_constraintStart_toEndOf="@id/point2"
                    app:layout_constraintEnd_toStartOf="@id/point4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_forecast_point"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/point4"
                    app:layout_constraintStart_toEndOf="@id/point3"
                    app:layout_constraintEnd_toStartOf="@id/point5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_forecast_point"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/point5"
                    app:layout_constraintStart_toEndOf="@id/point4"
                    app:layout_constraintEnd_toStartOf="@id/point6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_forecast_point"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/point6"
                    app:layout_constraintStart_toEndOf="@id/point5"
                    app:layout_constraintEnd_toStartOf="@id/point7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_forecast_point"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/point7"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_forecast_point"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/line1"
                    android:visibility="gone"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/point1"
                    app:layout_constraintEnd_toEndOf="@id/point2"
                    android:background="@drawable/ic_forecast_line"
                    android:layout_width="0dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/line2"
                    android:visibility="gone"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/point2"
                    app:layout_constraintEnd_toEndOf="@id/point3"
                    android:background="@drawable/ic_forecast_line"
                    android:layout_width="0dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/line3"
                    android:visibility="gone"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/point3"
                    app:layout_constraintEnd_toEndOf="@id/point4"
                    android:background="@drawable/ic_forecast_line"
                    android:layout_width="0dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/line4"
                    android:visibility="gone"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/point4"
                    app:layout_constraintEnd_toEndOf="@id/point5"
                    android:background="@drawable/ic_forecast_line"
                    android:layout_width="0dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/line5"
                    android:visibility="gone"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/point5"
                    app:layout_constraintEnd_toEndOf="@id/point6"
                    android:background="@drawable/ic_forecast_line"
                    android:layout_width="0dp"
                    android:layout_height="4dp"/>

                <View
                    android:id="@+id/line6"
                    android:visibility="gone"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/point6"
                    app:layout_constraintEnd_toEndOf="@id/point7"
                    android:background="@drawable/ic_forecast_line"
                    android:layout_width="0dp"
                    android:layout_height="4dp"/>

                <ImageView
                    android:id="@+id/sun1"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/point1"
                    app:layout_constraintEnd_toEndOf="@id/point1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_sun"
                    android:adjustViewBounds="true"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>

                <ImageView
                    android:id="@+id/sun2"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/point2"
                    app:layout_constraintEnd_toEndOf="@id/point2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_sun"
                    android:adjustViewBounds="true"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>

                <ImageView
                    android:id="@+id/sun3"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/point3"
                    app:layout_constraintEnd_toEndOf="@id/point3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_sun"
                    android:adjustViewBounds="true"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>

                <ImageView
                    android:id="@+id/sun4"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/point4"
                    app:layout_constraintEnd_toEndOf="@id/point4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_sun"
                    android:adjustViewBounds="true"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>

                <ImageView
                    android:id="@+id/sun5"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/point5"
                    app:layout_constraintEnd_toEndOf="@id/point5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_sun"
                    android:adjustViewBounds="true"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>

                <ImageView
                    android:id="@+id/sun6"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/point6"
                    app:layout_constraintEnd_toEndOf="@id/point6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_sun"
                    android:adjustViewBounds="true"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>

                <ImageView
                    android:id="@+id/sun7"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/point7"
                    app:layout_constraintEnd_toEndOf="@id/point7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_sun"
                    android:adjustViewBounds="true"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/forecastTitle"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sunBlock" />

            <TextView
                android:id="@+id/forecastText"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/forecastTitle"
                android:alpha="0.7"
                android:gravity="start"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>