<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.get.hd.ui.start.StartViewModel" />

        <variable
            name="handler"
            type="ru.get.hd.ui.start.StartFragment.Handler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/startContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkColor"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.main.MainActivity">

        <ImageView
            android:src="@drawable/ic_btn_bottom_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/icSplashBigCircle"
            android:layout_width="977dp"
            android:layout_height="977dp"
            android:adjustViewBounds="true"
            android:rotation="90"
            android:layout_marginTop="-120dp"
            android:alpha="0.2"
            app:layout_constraintTop_toTopOf="@id/startBtn"
            android:src="@drawable/ic_circle_big_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:layout_marginTop="-30dp"
            android:id="@+id/icSplashMidCircle"
            app:layout_constraintTop_toTopOf="@id/startBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_circle_mid_dark"
            android:alpha="0.2"
            android:adjustViewBounds="true"
            android:layout_width="977dp"
            android:layout_height="977dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/indicatorsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp">

            <View
                android:id="@+id/indicator1"
                android:background="@drawable/bg_inactive_indicator_dark"
                android:layout_width="9dp"
                android:layout_height="9dp"/>

            <View
                android:id="@+id/indicator2"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_inactive_indicator_dark"
                android:layout_width="9dp"
                android:layout_height="9dp"/>

            <View
                android:id="@+id/indicator3"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_inactive_indicator_dark"
                android:layout_width="9dp"
                android:layout_height="9dp"/>

            <View
                android:id="@+id/indicator4"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_inactive_indicator_dark"
                android:layout_width="9dp"
                android:layout_height="9dp"/>

            <View
                android:id="@+id/indicator5"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_inactive_indicator_dark"
                android:layout_width="9dp"
                android:layout_height="9dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/startBtn"
            android:layout_width="311dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{handler::onBtnClicked}"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_btn" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:letterSpacing="0.12"
                android:text="@string/continue_btn"
                android:textAllCaps="true"
                android:textColor="@color/lightColor"
                android:textSize="16sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/raveContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/startBtn"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/raveTitle"
                android:fontFamily="@font/montserrat_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/raveDesc"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/opensans"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nameContainer"
            android:alpha="0"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/startBtn">

            <TextView
                android:id="@+id/nameTitle"
                android:textSize="32sp"
                android:fontFamily="@font/montserrat_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/nameDesc"
                android:textSize="14sp"
                android:lineSpacingExtra="7sp"
                android:gravity="center"
                android:fontFamily="@font/opensans"
                app:layout_constraintTop_toBottomOf="@id/nameTitle"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/nameET"
                android:layout_marginBottom="62dp"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="@color/darkHintColor"
                android:fontFamily="@font/opensans"
                android:textSize="16sp"
                android:inputType="textCapWords"
                android:letterSpacing="0.2"
                android:gravity="center"
                android:includeFontPadding="true"
                android:paddingBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ru.get.hd.ui.view.datepicker.view.datePicker.DatePicker
                android:id="@+id/date"
                android:visibility="gone"
                android:alpha="0"
                android:calendarViewShown="false"
                android:layout_marginHorizontal="32dp"
                android:datePickerMode="spinner"
                android:calendarTextColor="@color/lightColor"
                app:pickerMode="dayFirst"
                android:layout_marginBottom="82dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hapticFeedbackEnabled="true"
                app:offset="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ru.get.hd.ui.view.datepicker.view.timePicker.TimePicker
                android:id="@+id/time"
                android:visibility="gone"
                android:alpha="0"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@id/skipTime"
                android:timePickerMode="spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/skipTime"
                android:visibility="gone"
                android:alpha="0"
                android:onClick="@{handler::onBtnClicked}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="62dp"
                android:fontFamily="@font/opensans_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/placeET"
                android:alpha="0"
                android:visibility="gone"
                android:layout_marginBottom="62dp"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameDesc"
                android:backgroundTint="@color/darkHintColor"
                android:fontFamily="@font/opensans"
                android:textSize="16sp"
                android:inputType="textCapWords"
                android:letterSpacing="0.2"
                android:gravity="center"
                android:includeFontPadding="true"
                android:paddingBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>