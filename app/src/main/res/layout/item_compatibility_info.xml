<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aboutItemContainer"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_about_item_light"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/aboutItemTitle"
            android:textStyle="bold"
            android:textSize="32sp"
            android:fontFamily="@font/gilroy"
            android:text="Bodygraph"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/aboutItemText"
            app:layout_constraintTop_toBottomOf="@id/aboutItemTitle"
            android:text="Your an individual bodygraph contains a schematic image of energy centers, channels. Learn more about yourself. woirhe  weoh wefoi ih eiwof"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:alpha="0.7"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy"
            android:lineSpacingExtra="2sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>