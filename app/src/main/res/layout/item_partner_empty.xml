<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/emptyIcon"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_empty_compatibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/emptyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@id/emptyIcon"
        app:layout_constraintStart_toStartOf="@id/emptyIcon"
        android:layout_marginTop="20dp"
        android:text="@string/empty_compatibility_title"/>

    <TextView
        android:id="@+id/emptySubtitle"
        android:text="@string/empty_compatibility_subtitle"
        android:fontFamily="@font/gilroy"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/emptyTitle"
        app:layout_constraintStart_toStartOf="@id/emptyIcon"
        app:layout_constraintEnd_toEndOf="@id/emptyIcon"
        android:layout_marginTop="16dp"
        android:alpha="0.5"
        android:lineSpacingExtra="3sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>