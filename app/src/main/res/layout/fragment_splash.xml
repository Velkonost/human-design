<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.get.hd.ui.splash.SplashViewModel" />

        <variable
            name="handler"
            type="ru.get.hd.ui.splash.SplashFragment.Handler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/splashContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkColor"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.main.MainActivity">
        <ImageView
            android:adjustViewBounds="true"
            android:src="@drawable/ic_stars"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/icSplashBigCircle"
            android:layout_width="977dp"
            android:layout_height="977dp"
            android:layout_marginTop="-120dp"
            android:adjustViewBounds="true"
            android:alpha="0.2"
            android:rotation="90"
            android:src="@drawable/ic_circle_big_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/splashBtn" />

        <ImageView
            android:id="@+id/icSplashMidCircle"
            android:layout_width="977dp"
            android:layout_height="977dp"
            android:layout_marginTop="-30dp"
            android:adjustViewBounds="true"
            android:alpha="0.2"
            android:src="@drawable/ic_circle_mid_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/splashBtn" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/splashBtn"
            android:layout_width="311dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{handler::onBtnClicked}"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_btn" />

            <TextView
                android:id="@+id/splashBtnText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:letterSpacing="0.12"
                android:text="@string/next"
                android:textAllCaps="true"
                android:textColor="@color/lightColor"
                android:textSize="16sp"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/splash0102Container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/splashBtn"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/icSplash0102Header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleSplash0102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/darkColor"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/icSplash0102Header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icSplash0102Header" />

            <TextView
                android:id="@+id/descSplash0102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:textColor="@color/darkColor"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleSplash0102" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/splash0304Container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/splashBtn"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/titleSplash0304"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="start"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/descSplash0304"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="start"
                        app:layout_constraintStart_toStartOf="@id/titleSplash0304"
                        app:layout_constraintTop_toBottomOf="@id/titleSplash0304" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="32dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/descSplash0304">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardVariant1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:onClick="@{handler::onVariantClicked}"
                            app:cardCornerRadius="10dp">

                            <View
                                android:id="@+id/strokeVariant1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0"
                                android:background="@drawable/gradient_variant_card_selected_light" />

                            <TextView
                                android:id="@+id/textVariant1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:fontFamily="@font/roboto"
                                android:gravity="start|center_vertical"
                                android:paddingVertical="16dp"
                                android:textSize="18sp" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardVariant2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:onClick="@{handler::onVariantClicked}"
                            app:cardCornerRadius="10dp">

                            <View
                                android:id="@+id/strokeVariant2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0"
                                android:background="@drawable/gradient_variant_card_selected_light" />

                            <TextView
                                android:id="@+id/textVariant2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:fontFamily="@font/roboto"
                                android:gravity="start|center_vertical"
                                android:paddingVertical="16dp"
                                android:textSize="18sp" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardVariant3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:onClick="@{handler::onVariantClicked}"
                            app:cardCornerRadius="10dp">

                            <View
                                android:id="@+id/strokeVariant3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0"
                                android:background="@drawable/gradient_variant_card_selected_light" />

                            <TextView
                                android:id="@+id/textVariant3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:fontFamily="@font/roboto"
                                android:gravity="start|center_vertical"
                                android:paddingVertical="16dp"
                                android:textSize="18sp" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardVariant4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:onClick="@{handler::onVariantClicked}"
                            app:cardCornerRadius="10dp">

                            <View
                                android:id="@+id/strokeVariant4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0"
                                android:background="@drawable/gradient_variant_card_selected_light" />

                            <TextView
                                android:id="@+id/textVariant4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:fontFamily="@font/roboto"
                                android:gravity="start|center_vertical"
                                android:paddingVertical="16dp"
                                android:textSize="18sp" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardVariant5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:onClick="@{handler::onVariantClicked}"
                            app:cardCornerRadius="10dp">

                            <View
                                android:id="@+id/strokeVariant5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0"
                                android:background="@drawable/gradient_variant_card_selected_light" />

                            <TextView
                                android:id="@+id/textVariant5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:fontFamily="@font/roboto"
                                android:gravity="start|center_vertical"
                                android:paddingVertical="16dp"
                                android:textSize="18sp" />

                        </com.google.android.material.card.MaterialCardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/splash05Container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/splashBtn"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/icSplash05Header"
                android:layout_width="235dp"
                android:layout_height="235dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_splash_05_header_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:gravity="center_vertical|start"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icSplash05Header">

                <TextView
                    android:id="@+id/text1Splash05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:gravity="start"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text2Splash05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:gravity="start"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text3Splash05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:gravity="start"
                    android:textSize="12sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>