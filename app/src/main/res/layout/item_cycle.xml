<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aboutItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_about_item_light"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/aboutItemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/gilroy"
            android:text="Bodygraph"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/gateNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ageTitle"
            android:text="@string/cycle_age_title"
            android:textSize="16sp"
            android:fontFamily="@font/gilroy"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/age"
            android:textSize="15sp"
            android:fontFamily="@font/gilroy"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ageTitle"
            android:text="28-30"
            android:paddingVertical="4dp"
            android:paddingHorizontal="6dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_age_dark"
            app:layout_constraintTop_toTopOf="@id/ageTitle"
            app:layout_constraintBottom_toBottomOf="@id/ageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/aboutItemText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy"
            android:lineSpacingExtra="2sp"
            android:maxLines="3"
            android:text="Your an individual bodygraph contains a schematic image of energy centers, channels. Learn more about yourself. woirhe  weoh wefoi ih eiwof"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ageTitle" />

        <ImageView
            android:id="@+id/aboutItemBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_about_item_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutItemText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>