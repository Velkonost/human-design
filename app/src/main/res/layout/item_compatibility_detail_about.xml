<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:fadeScrollbars="true"
        android:fadingEdgeLength="40dp"
        android:requiresFadingEdge="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="150dp">

            <ImageView
                android:id="@+id/chart1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/firstName"
                app:layout_constraintBottom_toBottomOf="@id/secondName"
                android:layout_marginStart="-80dp"
                android:layout_width="160dp"
                android:layout_height="0dp"/>

            <ImageView
                android:id="@+id/chart2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/firstName"
                app:layout_constraintBottom_toBottomOf="@id/secondName"
                android:layout_marginEnd="-80dp"
                android:layout_width="160dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/firstName"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="16sp"
                android:alpha="0.5"
                android:gravity="center"
                android:paddingHorizontal="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="34dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/firstTitle"
                android:textSize="24sp"
                android:gravity="center"
                android:paddingHorizontal="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstName"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif"
                android:src="@drawable/gif_compatibility"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/firstTitle"
                android:layout_marginTop="12dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/secondName"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="16sp"
                android:alpha="0.5"
                android:paddingHorizontal="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/secondTitle"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/secondTitle"
                android:gravity="center"
                android:textSize="24sp"
                android:paddingHorizontal="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gif"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/aboutDesc"
                android:layout_marginTop="54dp"
                android:layout_marginHorizontal="32dp"
                android:fontFamily="@font/opensans"
                android:textSize="16sp"
                android:alpha="0.7"
                android:lineSpacingExtra="7sp"
                app:layout_constraintTop_toBottomOf="@id/secondTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>