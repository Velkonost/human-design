<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <io.sulek.ssml.SimpleSwipeMenuLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            app:dynamicMenuWidth="false"
            app:layout_constraintTop_toTopOf="parent"
            app:menuSide="Right">
        <LinearLayout
            android:id="@+id/backgroundContainer"
            android:layout_width="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/deleteBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/icDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dark_close" />
            </FrameLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/foregroundContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/partnerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/partnerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!--        <View-->
            <!--            android:id="@+id/diagramStroke"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:alpha="0"-->
            <!--            android:background="@drawable/gradient_variant_card_selected_light" />-->

            <ImageView
                android:id="@+id/chart"
                android:layout_marginVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="4dp"
                android:alpha="0.7"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:letterSpacing="0.12"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/userName" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </io.sulek.ssml.SimpleSwipeMenuLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>