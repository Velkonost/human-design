<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemAboutContainer"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp">
        <!--android:backgroundTint="@color/colorItemFaqBackgroundTint"-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/expand_button"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icArrow"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/roboto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp" />

                <ImageView
                    android:id="@+id/icArrow"
                    android:src="@drawable/ic_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:alpha="0.5"
                    android:layout_marginEnd="12dp"
                    android:rotation="90"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_duration="3000"
                app:el_parallax="0.5"
                android:orientation="vertical"

                app:el_expanded="false">

                <TextView
                    android:id="@+id/description"
                    android:textSize="14sp"
                    android:alpha="0.7"
                    android:fontFamily="@font/roboto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="20dp"
                    android:text="Content" />
                <!--android:textColor="@color/colorItemFaqExpandableLayoutTextText"-->
            </net.cachapa.expandablelayout.ExpandableLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</layout>