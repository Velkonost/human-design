<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="ru.get.hd.ui.transit.TransitViewModel" />

        <variable
            name="handler"
            type="ru.get.hd.ui.transit.TransitFragment.Handler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transitContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.main.MainActivity">
        <TextView
            android:id="@+id/transitTitle"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:textSize="24sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/icInfo"
            android:src="@drawable/ic_info"
            android:onClick="@{handler::onFaqClicked}"
            android:adjustViewBounds="true"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/transitTitle"
            app:layout_constraintBottom_toBottomOf="@id/transitTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="27dp"
            android:layout_height="27dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/selectionCard"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transitTitle"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="20dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/selectionLinear"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transitsTitle"
                    android:onClick="@{handler::onTransitsClicked}"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginVertical="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/ic_affirmation_bg"
                    android:fontFamily="@font/roboto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/cyclesTitle"
                    android:onClick="@{handler::onCyclesClicked}"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginVertical="4dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@drawable/ic_affirmation_bg"
                    android:fontFamily="@font/roboto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/adviceTitle"
                    android:onClick="@{handler::onAdviceClicked}"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginVertical="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/ic_affirmation_bg"
                    android:fontFamily="@font/roboto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            app:layout_constraintTop_toBottomOf="@id/selectionCard"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>