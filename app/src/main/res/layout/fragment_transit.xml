<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.get.hd.ui.transit.TransitViewModel" />

        <variable
            name="handler"
            type="ru.get.hd.ui.transit.TransitFragment.Handler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transitContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.main.MainActivity">
        <ImageView
            android:adjustViewBounds="true"
            android:src="@drawable/ic_stars"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/transitTitle"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="24sp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_info"
            android:adjustViewBounds="true"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="@id/transitTitle"
            app:layout_constraintBottom_toBottomOf="@id/transitTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="27dp"
            android:layout_height="27dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/selectionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transitTitle"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/selectionLinear"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gatesTitle"
                    android:onClick="@{handler::onGatesClicked}"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_affirmation_bg"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/channelsTitle"
                    android:onClick="@{handler::onChannelsClicked}"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_affirmation_bg"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            app:layout_constraintTop_toBottomOf="@id/selectionCard"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>