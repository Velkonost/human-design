<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.get.hd.vm.BaseViewModel" />

        <variable
            name="handler"
            type="ru.get.hd.ui.activity.main.MainActivity.Handler" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">
            <FrameLayout
                android:id="@+id/subContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/toBodygraphCard"
                android:alpha="0"
                android:translationY="20dp"
                style="@style/ToBodygraphCard"
                android:layout_width="70dp"
                android:onClick="@{handler::onToBodygraphClicked}"
                app:cardElevation="14dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/lightSettingsCard"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/navViewContainer">
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/toBodygraphContainer"
                android:alpha="0"
                android:translationY="20dp"
                app:layout_constraintTop_toTopOf="@id/toBodygraphCard"
                app:layout_constraintBottom_toBottomOf="@id/toBodygraphCard"
                app:layout_constraintStart_toStartOf="@id/toBodygraphCard"
                app:layout_constraintEnd_toEndOf="@id/toBodygraphCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="14dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icToBodygraphArrow"
                    app:tint="@color/darkColor"
                    android:alpha="0.7"
                    android:src="@drawable/ic_double_arrow"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>

                <TextView
                    android:id="@+id/toBodygraphTitle"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="8dp"
                    android:textAllCaps="true"
                    android:textSize="6sp"
                    android:alpha="0.7"
                    android:textColor="@color/darkColor"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.cardview.widget.CardView
                android:id="@+id/navViewContainer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                android:animateLayoutChanges="true"
                android:elevation="4dp"
                app:cardElevation="14dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/nav_view"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:labelVisibilityMode="unlabeled"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:visibility="visible" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:contentDescription=""
            android:visibility="gone" />
        <!--        android:background="@color/colorBlur"-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress"
            android:alpha="0.5"
            android:background="@color/darkColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            >

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/progressBar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="6dp"
                android:src="@drawable/loader"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--            android:background="@drawable/bg_progress_light"-->
            <!--            android:indeterminateTint="@color/colorProgressBarIndeterminateTint"-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>